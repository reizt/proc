{
  "name": "@reizt/proc",
  "version": "1.0.8",
  "repository": "git@github.com:reizt/proc.git",
  "author": "reizt <reizt.dev@gmail.com>",
  "license": "MIT",
  "main": "./lib/cjs/index.js",
  "types": "./lib/types/index.d.ts",
  "module": "./lib/esm/index.mjs",
  "exports": {
    ".": {
      "types": "./lib/types/index.d.ts",
      "require": "./lib/cjs/index.js",
      "import": "./lib/esm/index.js"
    },
    "./server": {
      "types": "./lib/types/server/index.d.ts",
      "require": "./lib/cjs/server/index.js",
      "import": "./lib/esm/server/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": ["lib/cjs/**/*.js", "lib/esm/**/*.js", "lib/types/**/*.d.ts"],
  "scripts": {
    "build": "run-s clean && run-p build.*",
    "clean": "rm -rf lib/*",
    "build.cjs": "tsc --project tsconfig.cjs.json",
    "build.esm": "tsc --project tsconfig.esm.json",
    "build.types": "tsc --project tsconfig.types.json",
    "format": "biome check --write .",
    "check": "run-p check.*",
    "check.biome": "biome check .",
    "check.tsc": "tsc --incremental --noEmit --project tsconfig.test.json",
    "check.vitest": "vitest run",
    "test": "vitest watch",
    "test.next": "next dev"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.15.29",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "lefthook": "^1.11.13",
    "npm-run-all": "^4.1.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "peerDependencies": {
    "hono": "^4.7.11",
    "next": "^15.3.3",
    "zod": "^3.25.46"
  }
}
